<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <import resource="classpath:configuration-common-spring.xml"/>
    <import resource="classpath:etm-common-context.xml"/>

    <context:component-scan base-package="com.edmunds.etm.client.impl"/>

    <bean id="etmClientSettings" class="com.edmunds.etm.client.impl.ClientSettings">
        <property name="enabled">
            <bean class="com.edmunds.common.configuration.api.EnvironmentPropertyFactory">
                <property name="local" value="false"/>
                <property name="managed" value="true"/>
            </bean>
        </property>
    </bean>

    <!-- Note: The ${maven.artifactId} variable is set in ClientServletContextListener.getConfigurer() -->
    <!-- Which uses the values parsed from the etm-config.xml file -->
    <bean id="etmClientConfigurer" class="org.springframework.beans.factory.config.PropertyOverrideConfigurer">
        <property name="location"
                  value="file:///deployments/edmunds/properties/common/${maven.artifactId}-etm.properties"/>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="ignoreInvalidKeys" value="true"/>
    </bean>

</beans>
